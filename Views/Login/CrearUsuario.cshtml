    ViewData["Title"] = "CrearUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    @*<link href="css/styles.css" rel="stylesheet" />*@
    <link href="~/css/stylescrea.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Usuario</h3></div>
                                <div class="card-body">
                                    <form action="~/login/CrearUsuario" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputFirstName" type="text" placeholder="Digite Primer Nombre" />
                                                    <label for="inputFirstName">Primer Nombre</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input class="form-control" id="inputLastName" type="text" placeholder="Digite Segundo Nombre" />
                                                    <label for="inputLastName">Segundo Nombre</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputDireccion" type="email" placeholder="Calle #.. Region" />
                                                    <label for="Direccion">Direccion</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input class="form-control" id="inputTelefono" type="text" placeholder="809-000-0000" />
                                                    <label for="Direccion">Telefono</label>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" type="password" placeholder="Crear un password" />
                                                    <label for="inputPassword">Password</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirme password" />
                                                    <label for="inputPasswordConfirm">Confirme Password</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputUser" type="text" placeholder="Ej: Fulano Perez: FPEREZ" />
                                                    <label for="inputPassword">Usuario</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <select>
                                                        <option value="1">Administrador</option>
                                                        <option value="2">Facturacion</option>
                                                        <option value="3">Cajera</option>
                                                        <option value="4">Admision</option>
                                                    </select>
                                                    <label for="inputPasswordConfirm">Cargo</label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputEstatus" type="checkbox"  />
                                                    <label for="inputPassword">Estatus</label>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="mt-12 mb-12">
                                            <div class="d-grid"><button style="width:100%" class="btn btn-primary" type="submit">Crear Usuario</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="login.html">Ya Tiene Un Usuario? Inicie Secion</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>

   
       
      


