
@{
    ViewData["Title"] = "CrearUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Register - SB Admin</title>
    @*<link href="css/styles.css" rel="stylesheet" />*@
    <link href="~/css/stylescrea.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
</head>
<body class="bg-primary">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-12">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Crear Usuario</h3></div>
                                <div class="card-body">
                                    <form action="~/login/CrearUsuarioNuevo" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <label for="inputFirstName">Primer Nombre</label>
                                                    <input class="form-control" id="inputFirstName" name="NombreUsuario" type="text" placeholder="Digite Primer Nombre" />

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <label for="inputLastName">Segundo Nombre</label>
                                                    <input class="form-control" id="inputLastName" type="text" placeholder="Digite Segundo Nombre" />

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <label for="Direccion">Direccion</label>
                                                    <input class="form-control" id="inputDireccion" name="Direccion" type="text" placeholder="Calle #.. Region" />

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <label for="Direccion">Telefono</label>
                                                    <input class="form-control" id="inputTelefono" name="Telefono" type="text" placeholder="809-000-0000" />

                                                </div>
                                            </div>
                                        </div>


                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <label for="inputPassword">Password</label>
                                                    <input class="form-control" id="inputPassword" name="Password" type="password" placeholder="Crear un password" />

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <label for="inputPasswordConfirm">Confirme Password</label>
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" placeholder="Confirme password" />

                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <label for="inputPassword">Usuario</label>
                                                    <input class="form-control" id="inputUser" type="text" name="User" placeholder="Ej: Fulano Perez: FPEREZ" />

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <select class=" form-control" name="Cargo">
                                                        <option value="1">Administrador</option>
                                                        <option value="2">Facturacion</option>
                                                        <option value="3">Cajera</option>
                                                        <option value="4">Admision</option>
                                                    </select>
                                                    <label for="inputPasswordConfirm">Cargo</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row mb-3">

                                            <div class="col-md-6">
                                                <label>Estatus:</label>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" name="Estatus" type="radio" id="inlineCheckbox1" value="True">
                                                    <label class="form-check-label" for="inlineCheckbox1" style="color:blue;font-weight:bold" ;>Activo</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" name="Estatus" type="radio" id="inlineCheckbox2" value="Falce">
                                                    <label class="form-check-label" for="inlineCheckbox2" style="color:red;font-weight:bold;">Inactivo</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-12 mb-12">
                                            <div class="d-grid"><button style="width:100%;" class="btn btn-primary" type="submit">Crear Usuario</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small"><a href="~/login/login">Ya Tiene Un Usuario? Inicie Secion </a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>






